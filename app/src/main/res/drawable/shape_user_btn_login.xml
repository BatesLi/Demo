<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <!--填充的颜色-->
      <gradient
          android:startColor="@color/green_pressed"
          android:centerColor="@color/green_normal"/>
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <!--填充的颜色-->
      <gradient
          android:startColor="@color/green_normal"
          android:centerColor="@color/green_pressed"/>
    </shape>
  </item>
</selector>