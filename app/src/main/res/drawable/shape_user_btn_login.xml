<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <!--填充的颜色-->
      <gradient android:angle="315" android:endColor="@color/green_pressed" android:startColor="@color/green_normal" />
      <corners android:radius="12dp" />
    </shape>
  </item>

  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <!--填充的颜色-->
      <gradient android:angle="315" android:endColor="@color/green_normal" android:startColor="@color/green_pressed" />
      <corners android:radius="12dp" />
    </shape>
  </item>
</selector>