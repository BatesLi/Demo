<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnablePreviewInEditMode="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/bar_home_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_home_navigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_home_navigation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:drawablePadding="5dp"
                            android:drawableTop="@mipmap/navigation"
                            android:gravity="center"
                            android:text="导航" />

                        <TextView
                            android:id="@+id/txt_home_article"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:drawablePadding="5dp"
                            android:drawableTop="@mipmap/article"
                            android:gravity="center"
                            android:text="文章" />

                        <TextView
                            android:id="@+id/txt_home_project"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:drawablePadding="5dp"
                            android:drawableTop="@mipmap/project"
                            android:gravity="center"
                            android:text="项目" />

                        <TextView
                            android:id="@+id/txt_home_pwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:drawablePadding="5dp"
                            android:drawableTop="@mipmap/pwd"
                            android:gravity="center"
                            android:text="公众号" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_home_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <com.stx.xhb.xbanner.XBanner
                            android:id="@+id/banner_home_photo"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            app:AutoPlayTime="3000"
                            app:isAutoPlay="true"
                            app:isHandLoop="true"
                            app:isShowIndicatorOnlyOne="true"
                            app:isShowTips="true"
                            app:pageChangeDuration="800"
                            app:placeholderDrawable="@mipmap/xbanner_logo"
                            app:pointsContainerBackground="#442e2e2e"
                            app:pointsPosition="CENTER"
                            app:pointsVisibility="true"
                            app:tipTextSize="12sp" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_home_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="18dp">

                    <LinearLayout
                        android:id="@+id/linear_home_top_stick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/txt_top_stick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/top_article"
                            android:drawablePadding="10dp"
                            android:text="置顶" />

                        <TextView
                            android:id="@+id/txt_top_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_home_top_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recycler_home_top_article"
                        android:layout_marginVertical="18dp">

                        <TextView
                            android:id="@+id/txt_top_article"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/top_article"
                            android:drawablePadding="10dp"
                            android:text="文章" />

                        <TextView
                            android:id="@+id/txt_top_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="回到顶部" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_home_top_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear_home_top_stick"
                        tools:listitem="@layout/item_home_article" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_home_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear_home_top_article"
                        tools:listitem="@layout/item_home_article" />
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.design.widget.CoordinatorLayout>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
