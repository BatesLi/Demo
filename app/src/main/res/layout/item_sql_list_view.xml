<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

  <TextView android:id="@+id/txt_id"
      style="@style/itemSqListViewTextStyle"
      android:layout_weight="1" android:text="id"/>

  <TextView android:id="@+id/txt_name"
      style="@style/itemSqListViewTextStyle"
      android:layout_weight="2" android:text="name"/>

  <TextView android:id="@+id/txt_age"
      style="@style/itemSqListViewTextStyle"
      android:layout_weight="1" android:text="age"/>

  <TextView android:id="@+id/txt_gender"
      style="@style/itemSqListViewTextStyle"
      android:layout_weight="1" android:text="Gender"/>

  <TextView android:id="@+id/txt_city"
      style="@style/itemSqListViewTextStyle"
      android:layout_weight="2" android:text="City"/>
</LinearLayout>