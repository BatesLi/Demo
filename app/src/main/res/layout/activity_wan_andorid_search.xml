<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:orientation="horizontal" android:padding="8dp">
    <FrameLayout
        android:layout_width="0dp" android:layout_height="30dp"
        android:layout_weight="1" android:background="@drawable/shape_corner_search_edt"
        android:layout_gravity="center" android:paddingStart="20dp"
        android:paddingVertical="6dp">
      <cn.dankal.demo.SearchPractise.SearchWanAndroid.custom.ClearEditText
          android:id="@+id/edit_wan_search"
          android:layout_width="match_parent" android:layout_height="wrap_content"
          android:maxLines="1" android:textSize="14sp"
          android:imeOptions="actionSearch" android:layout_marginEnd="20dp"
          android:background="@android:color/transparent" android:inputType="text"
          android:textColor="#393B4D"/>
    </FrameLayout>

    <ImageButton android:id="@+id/img_btn_wan_search"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:src="@mipmap/search_btn" android:scaleType="center"
        android:layout_weight="0.1" android:background="@android:color/transparent"/>
  </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/img_btn_top_func"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@color/transparent"
            android:src="@mipmap/search"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="首页"
            android:textSize="24sp" />

    </RelativeLayout>

    <TextView
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_marginHorizontal="24dp" android:layout_marginTop="16dp"
      android:text="热门搜索" android:textColor="#393B4D"
      android:textSize="16sp"/>

  <cn.dankal.demo.SearchPractise.flowlayout.TagFlowLayout android:id="@+id/flow_layout_wan_search"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      app:max_select="1" android:padding="10dp"
      android:layout_marginHorizontal="12dp">
  </cn.dankal.demo.SearchPractise.flowlayout.TagFlowLayout>

  <android.support.v4.view.ViewPager
      android:id="@+id/view_page_wan_search"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />

  <com.bottom.PageNavigationView
      android:id="@+id/page_navigation_wan_search"
      android:layout_width="match_parent"
      android:layout_height="50dp" />
</LinearLayout>