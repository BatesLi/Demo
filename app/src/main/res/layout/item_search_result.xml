<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_4" android:layout_marginStart="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_4" android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4" app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent" android:layout_height="match_parent"
      android:background="@color/bg_daily_mode" android:padding="16dp">

    <RelativeLayout android:id="@+id/relative_article"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <TextView android:id="@+id/txt_article_title"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="             " android:layout_alignParentLeft="true"
          android:layout_marginBottom="9dp" android:paddingEnd="@dimen/dp_30"
          android:textColor="@color/text_daily_mode"
          android:textSize="@dimen/home_top_title_one_size"
          android:background="@color/bg_rv_item_tv"/>

      <ImageButton android:id="@+id/img_btn_article_save"
          android:layout_width="26dp" android:layout_height="26dp"
          android:src="@mipmap/collect_normal" android:background="@android:color/transparent"
          android:scaleType="centerCrop" android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView android:id="@+id/txt_article_author_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/relative_article"
        app:layout_constraintTop_toBottomOf="@id/relative_article"
        android:text="        " android:layout_marginTop="28dp"
        android:textSize="13sp" android:textColor="@color/text_daily_mode"
        android:background="@color/bg_rv_item_tv"/>

    <TextView android:id="@+id/txt_article_author"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="23dp" android:layout_marginStart="8dp"
        android:textColor="@color/text_daily_mode" android:textSize="13sp"
        android:text="     " android:background="@color/bg_rv_item_tv"
        app:layout_constraintLeft_toRightOf="@id/txt_article_author_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_article_author_title"/>

    <TextView android:id="@+id/txt_article_chapter_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="4dp" android:background="@color/bg_rv_item_tv"
        android:text="分类：   " app:layout_constraintTop_toBottomOf="@id/txt_article_author_title"
        app:layout_constraintStart_toStartOf="@id/txt_article_author_title"/>

    <TextView android:id="@+id/txt_article_super_chapter"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:background="@color/bg_rv_item_tv"
        android:text="     " android:textColor="@color/text_daily_mode"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_article_chapter_title"
        app:layout_constraintStart_toEndOf="@id/txt_article_chapter_title"
        app:layout_constraintTop_toTopOf="@id/txt_article_chapter_title"/>

    <TextView android:id="@+id/txt_article_chapter"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="         " android:background="@color/bg_edt_view"
        app:layout_constraintStart_toEndOf="@id/txt_article_super_chapter"
        app:layout_constraintTop_toTopOf="@id/txt_article_super_chapter"/>
    <TextView android:id="@+id/txt_article_date"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@color/bg_rv_item_tv" android:text="                "
        android:textColor="@color/text_daily_mode" android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_article_chapter"
        app:layout_constraintEnd_toEndOf="@id/relative_article"
        app:layout_constraintTop_toTopOf="@id/txt_article_chapter"/>
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>