<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchPractise.SearchWanAndroid.WanAndroidLoginActivity"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_daily_mode">

  <com.hjq.bar.TitleBar android:id="@+id/title_bar_login"
      android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
      app:backButton="false" app:barStyle="transparent"
      app:rightColor="@color/text_daily_mode_one"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <LinearLayout android:id="@+id/layout_title"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:orientation="vertical" android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@id/title_bar_login"
      app:layout_constraintStart_toStartOf="@id/card_view_login">

    <TextView
        android:id="@+id/txt_login_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="登录" android:textColor="@color/text_daily_mode_one"
        android:textSize="32sp" android:textStyle="bold"
        android:letterSpacing="0.2"/>
  </LinearLayout>

  <android.support.v7.widget.CardView android:id="@+id/card_view_login"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:layout_marginHorizontal="60dp" android:elevation="12dp"
      app:cardCornerRadius="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/layout_title"
      app:layout_constraintBottom_toTopOf="@id/btn_login">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/bg_card_view"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_8">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:padding="4dp">

        <ImageView
            android:id="@+id/img_user_picture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/dp_4"
            android:scaleType="centerCrop"
            android:src="@mipmap/id" />

        <cn.dankal.demo.SearchPractise.SearchWanAndroid.custom.ClearEditText
            android:id="@+id/edit_user_name_input"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="user name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/text_daily_mode" />
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginVertical="2dp"
          android:layout_marginStart="36dp"
          android:layout_marginEnd="@dimen/dp_4"
          android:background="@color/divide_line" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:padding="4dp">

        <ImageView
            android:id="@+id/img_password_picture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/pwd" />

        <cn.dankal.demo.SearchPractise.SearchWanAndroid.custom.ClearEditText
            android:id="@+id/edit_password_input"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/text_daily_mode" />
      </LinearLayout>

      <View
          android:id="@+id/user_line_confirm"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginVertical="2dp"
          android:layout_marginStart="36dp"
          android:layout_marginEnd="@dimen/dp_4"
          android:alpha="0"
          android:background="@color/divide_line"
          android:visibility="gone" />

      <LinearLayout
          android:id="@+id/linear_layout_password_confirm"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:alpha="0"
          android:orientation="horizontal"
          android:padding="@dimen/dp_4"
          android:visibility="gone">

        <ImageView
            android:id="@+id/img_password_confirm_picture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/confirm" />

        <cn.dankal.demo.SearchPractise.SearchWanAndroid.custom.ClearEditText
            android:id="@+id/edit_password_confirm_input"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="confirm password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/text_daily_mode" />
      </LinearLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>

  <Button android:id="@+id/btn_login"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:background="@drawable/shape_user_btn_login" android:text="登录"
      android:layout_marginBottom="100dp" android:layout_marginHorizontal="60dp"
      android:textColor="@color/btn_daily_mode"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>