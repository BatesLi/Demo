<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchPractise.SearchWanAndroid.SearchResultActivity"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

  <com.hjq.bar.TitleBar android:id="@+id/search_result_title"
      android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize"
      android:background="@color/bg_daily_mode" android:elevation="0dp"
      app:backButton="true" app:lineVisible="false"
      app:title="搜索结果" app:elevation="0dp"
      app:titleColor="@color/text_daily_mode_one" app:titleSize="@dimen/home_top_title_one_size">
  </com.hjq.bar.TitleBar>

  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:background="#FFF" android:orientation="horizontal"
      android:padding="4dp" android:layout_marginHorizontal="@dimen/dp_8">
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="当前查找关键词:  " android:textColor="@color/text_daily_mode"
        android:textSize="13dp"/>
    <TextView android:id="@+id/txt_search_result"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_100" android:text="占位"
        android:textColor="@color/text_daily_mode" android:textSize="13dp"/>
  </LinearLayout>

  <com.scwang.smartrefresh.layout.SmartRefreshLayout
      android:id="@+id/smart_search_result_refresh_content"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      app:srlEnablePreviewInEditMode="true">
    <!--srlAccentColor srlPrimaryColor 将会改变 Header 和 Footer 的主题颜色-->
    <!--srlEnablePreviewInEditMode 可以开启和关闭预览功能-->
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/bg_daily_white"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/recycler_result"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_8" android:layout_marginEnd="@dimen/dp_8"
        tools:listitem="@layout/item_search_result">
    </android.support.v7.widget.RecyclerView>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/bg_daily_white"/>

  </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>