<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_item"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp" android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp" card_view:cardElevation="4dp">
  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/txt_news_show"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="新闻:" android:layout_margin="8dp"
        android:textSize="20sp"/>
  </LinearLayout>
</android.support.v7.widget.CardView>

