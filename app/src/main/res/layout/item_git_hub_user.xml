<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_git_hub_user_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="用户名： "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_git_hub_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_git_hub_user_show"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_git_hub_user_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_git_hub_user_show"
                android:layout_marginLeft="20dp"
                android:text="foll:  "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_git_hub_user_follow_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_git_hub_user_show"
                android:layout_toRightOf="@id/txt_git_hub_user_follow"
                android:textColor="@color/white" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>