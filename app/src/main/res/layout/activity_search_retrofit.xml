<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".SearchPractise.SearchRetrofit.SearchRetrofitActivity">

  <RelativeLayout android:id="@+id/relative_action_bar"
      android:layout_width="match_parent" android:layout_height="80dp"
      android:background="@color/colorBgDark">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="60dp"
        android:layout_marginTop="20dp">
      <ImageView
          android:layout_height="35dp" android:layout_width="match_parent"
          android:layout_marginRight="50dp" android:layout_marginLeft="10dp"
          android:layout_centerVertical="true" android:background="@drawable/search_bg"/>
      <ImageView
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:src="@mipmap/search_bar" android:layout_centerVertical="true"
          android:layout_marginLeft="16dp"/>
      <EditText android:id="@+id/edi_search_retrofit"
          android:layout_width="match_parent" android:layout_height="wrap_content"
          android:layout_centerVertical="true" android:layout_marginLeft="40dp"
          android:layout_marginRight="60dp" android:hint="输入作品名或作者名"
          android:textSize="14dp" android:textColor="@color/colorSearchHintTextColorLight"
          android:background="@null" android:ellipsize="start"
          android:imeOptions="actionSearch" android:singleLine="true"
          android:textColorHint="@color/colorHintTextColorLight"/>

      <ImageView android:id="@+id/img_clear_text"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_centerVertical="true" android:layout_marginRight="60dp"
          android:src="@mipmap/clear_text" android:layout_alignParentRight="true"
          android:visibility="gone"/>
      <TextView android:id="@+id/txt_cancel"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="取消" android:layout_centerVertical="true"
          android:layout_alignParentRight="true" android:layout_marginRight="10dp"
          android:textSize="16sp"/>
    </RelativeLayout>
  </RelativeLayout>
  <ScrollView
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:layout_below="@id/relative_action_bar">

    <RelativeLayout android:id="@+id/relative_normal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/colorBg">

      <RelativeLayout android:id="@+id/relative_search_top"
          android:layout_width="match_parent" android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" android:layout_centerVertical="true"
            android:textSize="12dp" android:text="热门搜索"
            android:textColor="@color/colorTextColorLight"/>
        <View
            android:layout_alignParentBottom="true" android:layout_width="match_parent"
            android:layout_height="0.5dp" android:background="@color/colorBottom"/>
      </RelativeLayout>
      <android.support.v7.widget.RecyclerView android:id="@+id/recycler_search_top"
          android:padding="5dp" android:layout_below="@id/relative_search_top"
          android:overScrollMode="never" android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <View android:id="@+id/view_bottom_line"
          android:layout_width="match_parent" android:layout_height="8dp"
          android:background="@color/colorBgDark" android:layout_below="@id/recycler_search_top"/>

      <RelativeLayout android:id="@+id/relative_search_history"
          android:layout_below="@id/view_bottom_line" android:layout_width="match_parent"
          android:layout_height="35dp">

        <TextView
            android:layout_marginLeft="10dp" android:layout_centerVertical="true"
            android:textSize="12dp" android:text="最近搜索"
            android:textColor="@color/colorTextColorLight" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/img_clear_history"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_history" android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginRight="10dp"/>
      </RelativeLayout>
      <android.support.v7.widget.RecyclerView android:id="@+id/iv_history_recycle"
          android:layout_below="@id/relative_search_history" android:layout_width="match_parent"
          android:layout_height="wrap_content">
      </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
  </ScrollView>
</RelativeLayout>