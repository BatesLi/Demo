<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
  <android.support.v7.widget.Toolbar android:id="@+id/toolbar_recycler_more"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:background="@color/card_3">
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="recycler多布局" android:singleLine="true"
        android:layout_gravity="center" android:textColor="@color/white"/>
  </android.support.v7.widget.Toolbar>
  <android.support.v7.widget.RecyclerView android:id="@+id/recycler_more"
      android:layout_width="match_parent" android:layout_height="wrap_content">
  </android.support.v7.widget.RecyclerView>

</LinearLayout>