<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".smallPhotoAlbum.SmallAlbumActivity"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

  <android.support.v7.widget.Toolbar android:id="@+id/toolbar_album"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:background="@color/card_3">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="相册" android:textSize="20sp"/>
  </android.support.v7.widget.Toolbar>

  <ImageView android:id="@+id/img_photo"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:background="@color/black" android:layout_weight="3"/>
  <TextView android:id="@+id/txt_photo_information"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="图片信息" android:textSize="20sp"
      android:layout_gravity="center" android:textColor="@color/black"/>
  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:orientation="horizontal" android:gravity="center"
      android:layout_weight="1">
    <Button android:id="@+id/btn_previous_photo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="上一张"/>
    <Button android:id="@+id/btn_next_photo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="下一张" android:layout_marginLeft="10dp"/>
  </LinearLayout>
</LinearLayout>