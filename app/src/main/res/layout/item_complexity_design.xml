<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent" android:layout_height="95dp">

    <ImageView android:id="@+id/img_circle"
        android:layout_width="60dp" android:layout_height="60dp"
        android:background="@drawable/shape_circle" android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"/>

    <TextView android:id="@+id/txt_designer"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_circle" android:layout_marginTop="25dp"
        android:text="设计师" android:textSize="12sp"
        android:layout_marginLeft="10dp"/>

    <!--android:layout_alignBottom="@+id/first"//本元素的下边缘和某元素的的下边缘对齐-->
    <TextView android:id="@+id/txt_designer_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_circle" android:layout_below="@id/txt_designer"
        android:layout_marginLeft="10dp"
        android:text="姓名:" android:textSize="16sp"
        android:textColor="@color/black"/>

    <View android:id="@+id/view_line"
        android:layout_width="match_parent" android:layout_height="1dp"
        android:layout_below="@id/txt_designer_name" android:background="@color/colorGray"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:layout_below="@id/view_line" android:orientation="vertical"
      android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" android:text="简介"
        android:textColor="@color/black" android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" android:text="评论"
        android:textColor="#28B78D" android:textSize="12sp"
        android:layout_marginTop="10dp"/>
  </LinearLayout>
  <ImageView android:id="@+id/img_video"
      android:layout_width="match_parent" android:layout_height="200dp"
      android:layout_marginBottom="20dp" android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp" android:layout_marginTop="10dp"
      android:scaleType="centerCrop" android:src="@color/black"/>
</LinearLayout>